# Three Days Off Environment Variables

# Database (Supabase)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# Email Service (Optional - for updates and notifications)
EMAIL_SERVICE_API_KEY=your_email_service_key
EMAIL_FROM_ADDRESS=hello@threedaysoff.com

# Analytics (Privacy-first - Fathom or similar)
NEXT_PUBLIC_FATHOM_SITE_ID=your_fathom_site_id

# Image Storage (Cloudinary or similar)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Social Sharing
NEXT_PUBLIC_SITE_URL=https://ThreeDaysOff.com

# Feature Flags
NEXT_PUBLIC_ENABLE_LIVE_COUNTERS=true
NEXT_PUBLIC_ENABLE_VENUE_REGISTRATION=true
NEXT_PUBLIC_ENABLE_NOON_RIPPLE=false

# Security
NEXTAUTH_SECRET=your_nextauth_secret
NEXTAUTH_URL=https://ThreeDaysOff.com

